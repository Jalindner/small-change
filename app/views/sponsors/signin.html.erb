<br><br>
<h4 class="blue-grey-text text-blue-grey-darken-3">Sponsor log in</h4>
  <div class="row">
    <%= form_for 'sponsor', url: new_sponsor_session_path do |f| %>
      <div class="input-field col s12">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true %>
      </div>

      <div class="input-field col s12">
        <%= f.label :password %><br>
        <%= f.password_field :password, autocomplete: "off" %>
      </div>
  </div>
    <div class="center">
    <% if devise_mapping.rememberable? -%>
      <div class="input-field col s12">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end -%>
    <br>
    <div class="actions btn waves-effect waves-light green darken-4">
      <%= f.submit "Log in" %><br>
    </div>
  </div>
<% end %>

<div class="lower-links center">
  <br>
  <%= link_to "Sign up as a sponsor", newer_sponsor_registration_path %><br>
  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <%= link_to "Forgot your password?", new_password_path(resource_name) %><br />
  <% end -%>
</div>
