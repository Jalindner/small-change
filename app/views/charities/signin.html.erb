<h2 class="blue-grey-text text-blue-grey-darken-3">Log in as a charity</h2>

<%= form_for 'charity', url: new_charity_session_path do |f| %>
  <div class="input-field col s6">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>

  <div class="input-field col s6">
    <%= f.label :password %><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>


  <% if devise_mapping.rememberable? -%>
    <div class="input-field col s6">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>
  <br>
  <div class="actions btn waves-effect waves-light teal darken-2">
    <%= f.submit "Log in" %>
  </div>
<% end %>


<%= render "devise/shared/links" %>
